<StackLayoutTable>
    canvas.before:
        Color:
            rgba: 0.9,0.3, 0.1, 0.4
        Rectangle:
            pos: self.pos
            size: self.size

<TextInput@TextInput>:
    #font_name: '/usr/share/fonts/truetype/freefont/FreeSerifItalic.ttf'
    foreground_color: 0.9,0.3, 0.1, 1

<FundoBack@BoxLayout>:
    canvas.before:
        BorderImage:
            # BorderImage behaves like the CSS BorderImage
            border: (10,10,10,10)
            source: 'images/background.png'
            pos: self.pos
            size: self.size

<LabelTexts@Label>:
    canvas.before:
        Color:
            rgba: 0.9,0.3, 0.1, 0.5
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size

<Icon@Button>:
    canvas.before:
        Color:
            rgba: .8,.8,.8,1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    size_hint_x : None
    width : self.height
    border: 0,0,0,0

<Button@Button>:
    background_color: 0.9,0.3, 0.1, 1

<PopEmail>:
    id: labelpop
