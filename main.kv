<LoginScreen>:
    FundoBack:
        orientation:'vertical'
        padding:'20dp'
        spacing: '20dp'
        LabelTexts:
            text:'Autenticação Motorizadas'
            font_size: '55sp'
            size_hint: 1, .6
            spacing: '20dp'
        GridLayout:
            spacing: '20dp'
            size_hint: 0.5,0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            cols:2
            TextInput:
                hint_text : 'Email'
                font_size: '25sp'
                size_hint: 0.3,0.5
                id: utilizador
                multiline: False
            Icon:
                background_normal:'images/icon.png'
            TextInput:
                hint_text : 'Password'
                font_size: '25sp'
                size_hint: 0.3,0.5
                id:password
                password: True
                multiline: False
                foreground_color:0.9,0.3, 0.1, 0.5
            Icon:
                id:eye
                on_release: root.change_visible_password()
                background_normal:'images/eye.png'
        GridLayout:
            cols:3
            padding:'30dp'
            spacing: '5dp'
            size_hint: 0.8, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            Button:
                text:'Entrar'
                on_release: root.valida()
            Button:
                text:'Registrar'
                on_release: root.registra()
            Button:
                text:'Ver Motos'
                on_release: root.vai_para_motorizadas()


