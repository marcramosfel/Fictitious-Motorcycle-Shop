<Motorizadas>:
    FundoBack:
        orientation:'vertical'
        padding:'20dp'
        spacing: '10dp'
        BoxLayout:
            size_hint: 1, None
            orintetation: 'horizontal'
            pos_hint: {"top" : 0}
            Button:
                size_hint:0.1, 0.3
                text: "<<"
                background_color: 0.9,0.3, 0.1, 1
                on_release: root.atras()
            Search:
                name: 'search'
                font_size: self.height -15
                size_hint: 1,0.3
                multiline:False
            Button:
                background_color: 0.9,0.3, 0.1, 1
                text: "Pesquisar"
                font_size: self.height -15
                size_hint: 0.15,0.3
                on_release: root.search()
        GridLayout:
            name: 'gridLayout_list'
            cols:2
            ScrollView:
                name: 'scroll'
                StackLayoutTable:
                    name: 'table'
                    size_hint: 1, None
                    height: self.minimum_height
            BoxLayout:
                size_hint: 0.5, 1
                canvas.before:
                    Color:
                        rgba: 0.9,0.3, 0.1, 0.4
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ImageMoto:
                    #name:"image_photo"
                    size_hint: 1,1

